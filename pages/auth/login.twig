{% extends 'templates/index.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col m10 offset-m1 s12">
            <h2 class="center-align blue-grey-text">Login</h2>
            <div class="row">
                <form method="post" action="{{ path_for('loginPost') }}" class="col s12">
                    <div class="row">
                        <div class="input-field col m6 s12">
                            <input {% if preserved_data.email %}value="{{ preserved_data.email }}"{% endif %} id="email" name="email" type="email" class="validate">
                            <label for="email" class="blue-grey-text"><i class="material-icons left">mail</i>Email{% if form_errors.email %} | <span class="err">{{ form_errors.email | first }}</span>{% endif %}</label>
                        </div>
                        <div class="input-field col m6 s12">
                            <i class="material-icons left"></i>
                            <input id="password" name="password" type="password" class="validate">
                            <label for="password" class="blue-grey-text"><i class="material-icons left">fingerprint</i>Password{% if form_errors.password %} | <span class="err">{{ form_errors.password | first }}</span>{% endif %}</label>
                        </div>
                        <div class="input-field col s12">
                          <a href="{{ path_for('forgotPw') }}">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="divider"></div>
                     <p class="center-align"><button class="btn btn-large waves-effect waves-light blue-grey" type="submit">Login</button></p>
                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
