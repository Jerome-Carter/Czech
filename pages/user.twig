{% extends 'templates/index.twig' %}

{% block title %}{{ name }}'s Timesheet{% endblock %}

{% block content %}
<div class="container">
    {# <div class="row" style="margin-top: 30px">
        <div class="col m12 s12">
            <a href="{{ path_for('newUser') }}" style="width: 100% !important" class="btn btn-large waves-effect waves-light blue-grey">New User</a>
        </div>
    </div> #}
    <h3 style="text-align: center">{{ name }}'s Timesheet</h3>
    <table class="striped centered" style="margin-bottom: 30px">
        <thead>
          <tr>
            {% if logs is not empty %}
              <th data-field="status">Status</th>
              <th data-field="loc">Location</th>
              <th data-field="time">Time</th>
            {% else %}
            {% endif %}
          </tr>
        </thead>

        <tbody>
          {% if logs is empty %}
          <tr>
              <td class="red-text" style="font-weight: bolder; font-size: 30px">No records could be found.</td>
          </tr>
          {% endif %}
          {% for log in logs %}
            {% if log is not null %}
          <tr>
            <td>{{ log.status }}</td>
            <td>{{ log.location|raw }}</td>
            <td>{{ log.date }}</td>
          </tr>
            {% endif %}
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}